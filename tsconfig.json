{
  "compilerOptions": {
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "module": "ESNext", 
      "target": "ESNext", 
       "moduleResolution": "Node"
  }, 
  "ts-node": {
     "esm": true, 
     "experimentalSpecifierResolution": "node",
     "transpileOnly": true,
    }, 
    "include": [
      "./*.js",
      "./api/*.ts", 
      "src/**/*.ts",
    "source/models/**/*.ts"
    
    ]
}